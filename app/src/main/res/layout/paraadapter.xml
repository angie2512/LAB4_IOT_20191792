<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagenPersona"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-15dp"
        android:clickable="true"
        android:layout_marginTop="-10dp"
        app:layout_constraintStart_toStartOf="@id/imagenPersona"
        app:layout_constraintTop_toTopOf="@id/imagenPersona"
        app:srcCompat="@drawable/baseline_dangerous_24" />

    <TextView
        android:id="@+id/nombrePersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr Melvin Picard"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imagenPersona"
        app:layout_constraintTop_toTopOf="@+id/imagenPersona" />

    <TextView
        android:id="@+id/generoPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/nombrePersona"
        app:layout_constraintTop_toBottomOf="@+id/nombrePersona" />
    <TextView
        android:id="@+id/ciudadPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciudad"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/nombrePersona"
        app:layout_constraintTop_toBottomOf="@+id/generoPersona" />
    <TextView
        android:id="@+id/paisPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PaÃ­s"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/nombrePersona"
        app:layout_constraintTop_toBottomOf="@+id/ciudadPersona" />
    <TextView
        android:id="@+id/emailPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/nombrePersona"
        app:layout_constraintTop_toBottomOf="@+id/paisPersona" />
    <TextView
        android:id="@+id/phonePersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/nombrePersona"
        app:layout_constraintTop_toBottomOf="@+id/emailPersona" />



</androidx.constraintlayout.widget.ConstraintLayout>